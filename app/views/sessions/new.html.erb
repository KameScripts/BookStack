<div class="mx-auto">
  <h1 class="font-bold text-3xl">ログイン</h1>

  <%= form_with url: login_path, scope: :session, class: "contents" do |form| %>
    <div class="my-5">
      <%= form.label :email %>
      <%= form.email_field :email, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mb-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :password %>
      <%= form.password_field :password, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mb-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit "ログインする", class: "rounded-lg py-3 px-5 bg-neutral-950 text-white font-medium cursor-pointer transition hover:bg-neutral-600 active:scale-95" %>
    </div>
  <% end %>
</div>